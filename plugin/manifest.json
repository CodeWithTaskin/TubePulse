{
  "manifest_version": 3,
  "name": "TubePulse",
  "version": "1.0",
  "description": "Analyzes YouTube video comments for sentiment.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "http://localhost/*",
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
